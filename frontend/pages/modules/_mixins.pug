-var menuItem = ["Главная", "Подбор туров", "Агенствам", "Не нашли, что искали", "Контакти"]
-var menuSubItem = ["menuSubItem1", "menuSubItem2", "menuSubItem3"]
-var menuSubItem2 = ["menuSubItem21", "menuSubItem22", "menuSubItem23"]
mixin menu(items)
    ul.sf-menu
        each item in menuItem
            if item == menuItem[1]
                li
                    a(href="#" class="active") #{item}
                    .sf-mega
                        ul.mega-sub
                            each item in menuSubItem
                                li: a(href="#") #{item}

            else if item == menuItem[2]
                li
                    a(href="#") #{item}
                    .sf-mega
                        ul.mega-sub
                            each item in menuSubItem
                                li: a(href="#") #{item}
            else
                li: a(href="#") #{item}

